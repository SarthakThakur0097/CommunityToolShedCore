@model CommunityToolShedCore.ViewModels.CreateCommunityViewModel

@{
    ViewBag.Title = "Add a community";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>
        <div class="card-body">

            <div class="form-check m-1">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input asp-for="IsOpen" class="form-check-input" />
                <label class="form-check-label" asp-for="IsOpen">

                </label>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">
                    Create community
                </button>
            </div>
        </div>
    </div>
</form>