@model CommunityToolShedCore.ViewModels.CreateCommunityViewModel

@{
    ViewBag.Title = "Add a community";
}

<form asp-action="CreateCommunity" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input asp-for="IsOpen" class="form-check-input" />
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success" style="width:auto">
                Add community
            </button>
        </div>
    </div>
</form>